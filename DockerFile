# Start from a standard Python 3.10 image
FROM python:3.10-slim

# Set the working directory
WORKDIR /app

# Install Tesseract-OCR
RUN apt-get update && apt-get install -y tesseract-ocr

# --- ADD THIS LINE ---
# Create the /data mount point
RUN mkdir -p /data
# ---

# Copy your requirements file and install all Python packages
COPY requirements.txt .
RUN pip install -r requirements.txt

# Copy the rest of your application code
COPY . .

# Railway provides the $PORT variable, just like Render
CMD gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:$PORT